<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestionFragment">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_question"
            android:textAlignment="center"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_light_green"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="button"
                    android:onClick="rateButtonClicked"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:tag="1"
                    app:srcCompat="@drawable/icon2" />

                <ImageButton
                    android:id="@+id/btn_green"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="button"
                    android:onClick="rateButtonClicked"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:tag="2"
                    app:srcCompat="@drawable/icon1" />

                <ImageButton
                    android:id="@+id/btn_yellow"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="button"
                    android:onClick="rateButtonClicked"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:tag="3"
                    app:srcCompat="@drawable/icon3" />

                <ImageButton
                    android:id="@+id/btn_light_orange"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="button"
                    android:onClick="rateButtonClicked"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:tag="4"
                    app:srcCompat="@drawable/icon4" />

                <ImageButton
                    android:id="@+id/btn_orange"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="button"
                    android:onClick="rateButtonClicked"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:tag="5"
                    app:srcCompat="@drawable/icon5" />

                <ImageButton
                    android:id="@+id/btn_red"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:contentDescription="button"
                    android:onClick="rateButtonClicked"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:tag="6"
                    app:srcCompat="@drawable/icon6" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/bt_no_answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>